<Window x:Name="Window" x:Class="RocketProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RocketProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate x:Key="dataTemplateMissions">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=MissionName}" FontSize="14" Margin="10"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="LbxMission" HorizontalAlignment="Left" Height="123" Margin="100,36,0,0" VerticalAlignment="Top" Width="186" SelectionChanged="LbxMission_SelectionChanged"/>
        <ListBox x:Name="lbxPayload" HorizontalAlignment="Left" Height="100" Margin="100,171,0,0" VerticalAlignment="Top" Width="186"/>
        <Image x:Name="imgRocket" HorizontalAlignment="Left" Height="233" Margin="615,161,0,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="0.466,0.502"/>
        <ComboBox HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="151"/>
        <TextBox x:Name="tbxPayloadInfo" HorizontalAlignment="Left" Height="107" Margin="100,287,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <TextBox x:Name="tbxMission" HorizontalAlignment="Left" Height="100" Margin="308,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>
        <RadioButton x:Name="radioUpcoming" Content="Upcoming&#xD;&#xA;Launches" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Height="33" Checked="radioUpcoming_Checked"/>
        <RadioButton x:Name="radioPast" Content="Completed&#xA;Launches" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Height="38" Checked="radioPast_Checked"/>
        <TextBlock x:Name="tbxMissionInfo" HorizontalAlignment="Left" Height="123" Margin="308,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="443"/>
        <ListBox x:Name="lbxMissionInfo" HorizontalAlignment="Left" Height="107" Margin="308,287,0,0" VerticalAlignment="Top" Width="291"/>
        <RadioButton x:Name="radioAll" Content="Upcoming&#xA;Launches" HorizontalAlignment="Left" Margin="13,103,0,0" VerticalAlignment="Top" Height="33" Checked="radioAll_Checked"/>


    </Grid>
</Window>
